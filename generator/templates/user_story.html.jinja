<div class="user-story">
    <div class="story-header">
        <h2 class="story-title">
            <span class="story-id">{{ story.id }}</span> - {{ story.title }}
        </h2>
        <div class="story-meta">
            <span class="story-state state-{{ story.state }}">{{ story.state }}</span>
            {% if story.tags %}
            <div class="story-tags">
                {% for tag in story.tags %}
                <span class="tag">{{ tag }}</span>
                {% endfor %}
            </div>
            {% endif %}
        </div>
    </div>
    
    <div class="story-link">
        <a href="{{ story.url }}" target="_blank">{{ story.url }}</a>
    </div>
    
    <div class="story-timestamps">
        <span>Created: {{ story.timestamps.created | format_datetime }}</span>
        <span>Updated: {{ story.timestamps.updated | format_datetime }}</span>
    </div>
    
    <div class="story-content">
        {% if story.sections.description %}
        <div class="section">
            <h3 class="section-title">Description</h3>
            <div class="section-content">
                {{ story.sections.description | markdown | safe }}
            </div>
        </div>
        {% endif %}
        
        {% if story.sections.business_value %}
        <div class="section">
            <h3 class="section-title">Business Value</h3>
            <div class="section-content">
                {{ story.sections.business_value | markdown | safe }}
            </div>
        </div>
        {% endif %}
        
        {% if story.sections.preconditions %}
        <div class="section">
            <h3 class="section-title">Preconditions</h3>
            <div class="section-content">
                {{ story.sections.preconditions | markdown | safe }}
            </div>
        </div>
        {% endif %}
        
        {% if story.sections.acceptance_criteria %}
        <div class="section">
            <h3 class="section-title">Acceptance Criteria</h3>
            <div class="section-content">
                {{ story.sections.acceptance_criteria | markdown | safe }}
            </div>
        </div>
        {% endif %}
        
        {% if story.sections.user_guide %}
        <div class="section">
            <h3 class="section-title">User Guide</h3>
            <div class="section-content">
                {{ story.sections.user_guide | markdown | safe }}
            </div>
        </div>
        {% endif %}
        
        {% if story.sections.connections %}
        <div class="section">
            <h3 class="section-title">Connections</h3>
            <div class="section-content">
                {{ story.sections.connections | markdown | safe }}
            </div>
        </div>
        {% endif %}
        
        {% if story.sections.last_edited %}
        <div class="section">
            <h3 class="section-title">Last Edited</h3>
            <div class="section-content">
                {{ story.sections.last_edited | markdown | safe }}
            </div>
        </div>
        {% endif %}
    </div>
</div>
